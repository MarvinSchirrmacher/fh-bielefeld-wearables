<Management>:
    do_default_tab: False
    tab_pos: 'right_top'

    canvas.before:
        Color:
            rgba: .949, .953, .954, 0
        Rectangle:
            size: self.size
            pos: self.pos

    TabbedPanelItem:
        text: 'Pack'

        BoxLayout:
            orientation: 'horizontal'

            ListView:
            ListView:

    TabbedPanelItem:
        text: 'Trim'

        Label:
            text: 'Trimming mode is active, watch for the LEDs on the shoulder straps.'

    TabbedPanelItem:
        text: 'Configure'

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Gender'
                Label:
                    text: str(root.settings.gender)

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Birthday'
                Label:
                    text: str(root.settings.birthday)

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Height'
                Label:
                    text: str(root.settings.height)

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Weight'
                Label:
                    text: str(root.settings.weight)