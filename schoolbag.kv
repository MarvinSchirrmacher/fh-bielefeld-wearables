#:import listadapter kivy.adapters.listadapter
#:import ListItemLabel kivy.uix.listview
#:import CompositeListItem kivy.uix.listview

<Widget>:
    color: .1, .1, .1, 1
    font_name: './fonts/calibri.ttf'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Label>:
    font_size: sp(30)

<TabbedPanel>:
    do_default_tab: False
    tab_pos: 'right_top'
    tab_height: pt(40)
    tab_width: self.height / 2

<Button>:
    background_color: 0.282, 0.702, 0.627, 1
    background_normal: ''
    color: 1, 1, 1, 1

<ListView>:
    background_color: 0, 0, 0, .1

<CompositeListItem>:
    size_hint_y: None
    height: pt(60)

<Image>:
    size_hint: None, None
    height: pt(60)
    width: pt(60)
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.height, self.height
            pos: self.x, self.y

<ListItemLabel>:
    shorten: True
    shorten_from: 'right'
    text_size: (self.width, self.height / 2)

<Popup>:
    title_color: .1, .1, .1, 1
    title_size: sp(30)
    seperator_color: 0.282, 0.702, 0.627, 1

<Management>:
    TabbedPanelItem:
        text: 'Packen'

        GridLayout:
            cols: 3

            Image:
                size_hint: None, None
                height: pt(60)
                width: pt(60)
                source: 'icons/schoolbag.png'
            Image:
                size_hint: None, None
                height: pt(60)
                width: pt(60)
                source: 'icons/download.png'
            Image:
                size_hint: None, None
                height: pt(60)
                width: pt(60)
                source: 'icons/upload.png'

            ListView:
                size_hint_y: None
                height: self.parent.height * 0.85
                adapter: root.content_management.current_content_adapter
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, .1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            ListView:
                size_hint_y: None
                height: self.parent.height * 0.85
                adapter: root.content_management.content_to_insert_adapter
            ListView:
                size_hint_y: None
                height: self.parent.height * 0.85
                adapter: root.content_management.content_to_remove_adapter

    TabbedPanelItem:
        text: 'Einstellungen'

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Geschlecht'
                Label:
                    text: root.settings.gender

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Geburtstag'
                Label:
                    text: str(root.settings.birthday)

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Größe'
                Label:
                    text: '%d cm' % root.settings.height

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Gewicht'
                Label:
                    text: '%d kg' % root.settings.weight

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Beleuchtungsmodus'
                Label:
                    text: root.settings.lighting_mode

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Animationstyp'
                Label:
                    text: root.settings.animation_type

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: 'App beenden'
                    on_press: app.stop()
                Label:
                    text: ''
